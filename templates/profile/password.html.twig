{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
  
    {% if notification %}<div class="alert alert-info"> {{ notification }}</div> {% endif %}




  <div class="container py-5">

    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
              <h1>Choisissez un nouveau mot de passe</h1>
              <div class="row ">
            {{ form_start(form) }}
                <div class="col-md-12 ">{{ form_row(form.old_password) }}</div>
                <div class="col-md-12">{{ form_row(form.new_password) }}</div>
            </div>
            {{ form_end(form) }}
         </div>
        </div>
      </div>
    </div>
  </div>


{% endblock %}
